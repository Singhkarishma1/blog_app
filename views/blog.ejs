<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>  
    <title>Blog</title>
</head>
<body>
  <%- include('./partials/nav') %>

    <div class="container mt-4" >
        <h1>
            <%= blog.title %>
        </h1>
        <!-- Updated image src to match the static path structure -->
        <img src="/uploads/<%= blog.coverImageURL.split('/').pop() %>" width="500px" height="500px"/>
        <p class="mt-4"><%= blog.body %></p>
    
   </div>
   <div class="container mt-4" >
    <img src="<%= blog.createdBy.profileImageURL %>" width="50px"alt=""><%= blog.createdBy.fullName %>
   </div>
   <div class="container mt-3" >
    <h1>Comments (<%= comments.length %>)</h1>
    <% if (locals.user) { %>
        <form action="/blog/comments/<%= blog._id %>" method="post">
            
             
            <div class="mb-3">
               <input type="text" name="content" class="form-control" placeholder="Enter your comment">
            <button class="btn btn-sm btn-primary" type="submit">Add</button>  
            </div>
    
        </form>
        
    <% } %>
    <div class="mb-3">
        <% comments.forEach(comment => { %>
         <div>
            <img src="<%= comment.createdBy.profileImageURL %>" width="50px"alt=""><%= comment.createdBy.fullName %>
            <pre><%= comment.content %></pre>
         </div>
        <% }) %>
    </div>
   </div>

  <%- include('./partials/scripts') %>
</body>
</html>
